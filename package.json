{
  "name": "sar-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --host 0.0.0.0",
    "dev": "npm install && npm run serve",
    "build": "vue-cli-service build",
    "http-server": "http-server dist -i -p 8080",
    "install-ais": "cd services/ais && npm install --no-save",
    "install-bootstrap": "cd services/bootstrap && npm install --no-save",
    "install-database": "cd services/database && npm install --no-save",
    "install-location": "cd services/location && npm install --no-save",
    "postinstall": "npm run -s install-ais && npm run -s install-bootstrap && npm run -s install-database && npm run -s install-location && npm run -s maptiles:extract",
    "lint": "vue-cli-service lint",
    "prettier:check": "prettier --check {src,services}/**/*.{vue,js,ts}",
    "prettier:write": "prettier --write {src,services}/**/*.{vue,js,ts}",
    "maptiles:clean": "rimraf dist/MapTiles",
    "maptiles:extract": "cd public && extract-zip ../data/MapTiles.zip"
  },
  "dependencies": {
    "@datenpate/leaflet.polylinemeasure": "^1.0.0",
    "chart.js": "^2.9.3",
    "element-ui": "^2.13.0",
    "http-server": "^0.12.1",
    "leaflet": "^1.6.0",
    "leaflet-draw": "^1.0.4",
    "moment": "^2.24.0",
    "pouchdb-authentication": "^1.1.3",
    "pouchdb-browser": "^7.2.1",
    "pouchwrapper": "0.0.4",
    "vue": "^2.6.11",
    "vue-chartjs": "^3.5.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.12.1",
    "@vue/cli-plugin-babel": "^3.12.1",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^3.12.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.3",
    "extract-zip": "^1.6.7",
    "prettier": "^1.19.1",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-console": "off",
      "vue/require-v-for-key": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "globals": {
      "L": true
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
